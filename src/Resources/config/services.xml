<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Service Layer -->
        <service id="WSCPlugin\SWVariantUpdater\Service\VariantUpdateService">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="logger"/>
        </service>

        <!-- Commands -->
        <service id="WSCPlugin\SWVariantUpdater\Command\UpdateVariantCommand">
            <argument type="service" id="WSCPlugin\SWVariantUpdater\Service\VariantUpdateService"/>
            <tag name="console.command"/>
        </service>
    </services>
</container>
