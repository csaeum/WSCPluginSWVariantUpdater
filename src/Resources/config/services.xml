<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Service Layer -->
        <service id="WSCPlugin\SWVariantUpdater\Service\TwigTemplateRenderer">
            <argument type="service" id="twig"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="WSCPlugin\SWVariantUpdater\Service\VariantUpdateService">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="logger"/>
            <argument type="service" id="WSCPlugin\SWVariantUpdater\Service\TwigTemplateRenderer"/>
        </service>

        <service id="WSCPlugin\SWVariantUpdater\Service\BatchSizeCalculator"/>

        <service id="WSCPlugin\SWVariantUpdater\Service\ProgressTracker">
            <argument type="service" id="wsc_variant_update_progress.repository"/>
            <argument type="service" id="wsc_variant_update_log.repository"/>
        </service>

        <!-- Entity Definitions -->
        <service id="WSCPlugin\SWVariantUpdater\Entity\VariantUpdateProgress\VariantUpdateProgressDefinition">
            <tag name="shopware.entity.definition" entity="wsc_variant_update_progress"/>
        </service>

        <service id="WSCPlugin\SWVariantUpdater\Entity\VariantUpdateLog\VariantUpdateLogDefinition">
            <tag name="shopware.entity.definition" entity="wsc_variant_update_log"/>
        </service>

        <!-- Message Handlers -->
        <service id="WSCPlugin\SWVariantUpdater\MessageHandler\UpdateVariantsMessageHandler">
            <argument type="service" id="messenger.default_bus"/>
            <argument type="service" id="WSCPlugin\SWVariantUpdater\Service\ProgressTracker"/>
            <argument type="service" id="WSCPlugin\SWVariantUpdater\Service\BatchSizeCalculator"/>
            <argument type="service" id="logger"/>
            <tag name="messenger.message_handler"/>
        </service>

        <service id="WSCPlugin\SWVariantUpdater\MessageHandler\UpdateVariantsBatchMessageHandler">
            <argument type="service" id="WSCPlugin\SWVariantUpdater\Service\VariantUpdateService"/>
            <argument type="service" id="WSCPlugin\SWVariantUpdater\Service\ProgressTracker"/>
            <argument type="service" id="WSCPlugin\SWVariantUpdater\Service\BatchSizeCalculator"/>
            <argument type="service" id="logger"/>
            <tag name="messenger.message_handler"/>
        </service>

        <!-- Commands -->
        <service id="WSCPlugin\SWVariantUpdater\Command\UpdateVariantCommand">
            <argument type="service" id="WSCPlugin\SWVariantUpdater\Service\VariantUpdateService"/>
            <argument type="service" id="messenger.default_bus"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <tag name="console.command"/>
        </service>

        <service id="WSCPlugin\SWVariantUpdater\Command\DebugVariantCommand">
            <argument type="service" id="WSCPlugin\SWVariantUpdater\Service\VariantUpdateService"/>
            <argument type="service" id="WSCPlugin\SWVariantUpdater\Service\TwigTemplateRenderer"/>
            <tag name="console.command"/>
        </service>

        <!-- Controllers -->
        <service id="WSCPlugin\SWVariantUpdater\Controller\Administration\VariantUpdateController" public="true">
            <argument type="service" id="WSCPlugin\SWVariantUpdater\Service\VariantUpdateService"/>
            <argument type="service" id="messenger.default_bus"/>
            <argument type="service" id="WSCPlugin\SWVariantUpdater\Service\ProgressTracker"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="logger"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>
    </services>
</container>
